#!/bin/bash
fleet_bin="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
set -e
ship=$1
echo >&2 Creating arguments for starting $ship
args='TRAP'
if [ 3 = ${#ship} ]; then
  args="-I $ship"
  if [ -d ships/$ship ]; then
    args="$args ships/$ship"
  else
    args="$args -sA $(dirname $fleet_bin)/arvo -c ships/$ship"
  fi
elif [ 6 = ${#ship} ] || [ 13 = ${#ship} ] ; then
  if [ -d ships/$ship ]; then args="ships/$ship"
  else
    sein=$($fleet_bin/urb -d "(sein ~$ship)" 2>/dev/null)  # XX figure out port
    if [ ! -d ${sein:1} ]; then
      $fleet_bin/start-urbit ${sein:1}
    fi
    ticket=$(urb ${sein:1} -d "+ticket ~$ship")
    #
    args="-cw $ship -t $ticket"
  fi
else
  echo >&2 "Weird ship $ship, length ${#ship}"
  exit 1
fi
if [ "$FAKE" ]; then
  args="-NF $args"
fi
echo $args
